@using SMECommon
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <title>SME LogIn</title>
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport" />
    <link rel="icon" href="@Url.Content("~/Content/images/Bimob.ico")" />
    <link rel="stylesheet" href="@Url.Content("~/Content/bootstrap/css/bootstrap.min.css")?@AppSettings.Version" />
    <link rel="stylesheet" href="@Url.Content("~/Content/font-awesome-4.4.0/css/font-awesome.min.css")?@AppSettings.Version" />
    <link rel="stylesheet" href="@Url.Content("~/Content/ionicons-master/css/ionicons.min.css")?@AppSettings.Version" />
    <link rel="stylesheet" href="@Url.Content("~/Content/dist/css/AdminLTE.min.css")?@AppSettings.Version" />
    <link rel="stylesheet" href="@Url.Content("~/Content/plugins/iCheck/square/blue.css")?@AppSettings.Version" />
    <link rel="stylesheet" href="@Url.Content("~/Content/css/Loading.css")?@AppSettings.Version" />

    <style type="text/css">
        .login-page, .register-page {
            background: linear-gradient(90deg, rgba(2,0,36,1) 0%, rgba(74,153,123,1) 54%, rgba(0,212,255,1) 100%);
        }

        .customError {
            background-color: #ffeeee;
            border: 1px solid #ff0000;
        }

        .imgLogo {
            margin-top: -6px;
        }

        .tab-content {
            padding: 10px;
        }

        .divContacts, .divContacts ul, .divContacts, .divContacts ul li {
            display: inline-block;
        }

            .divContacts li a {
                color: #fff;
            }

            .divContacts ul li {
                padding: 15px 15px 0px;
                color: #1AA06D;
                font-size: 13px;
                font-family: cursive;
                font-weight: bold;
            }

            .divContacts .fa {
                margin-right: 7px;
                font-size: 18px;
                width: 16px;
            }

        .divContacts {
            position: fixed;
            bottom: 0;
            background: brown;
            width: 100%;
            text-align: center;
        }

        body {
            position: relative;
        }

        @@media (max-width:699px) {
            body {
                height: 700px
            }
        }
    </style>
    <script language="javascript" type="text/javascript">
        var G_RedirectUrl = "@SMESessionVar.RedirectUrl";
    </script>
</head>
<body class="hold-transition login-page">
    <div id="loading">
        <div id="loading-center">
            <div id="loading-center-absolute">
                <div class="object" id="object_four">
                </div>
                <div class="object" id="object_three">
                </div>
                <div class="object" id="object_two">
                </div>
                <div class="object" id="object_one">
                </div>
            </div>
        </div>
    </div>
    <div class="login-box">
        <div class="login-logo">
            <img class="imgLogo" src="@Url.Content("~/CustomContents/img/MGL.png")" /><a href="javascript:void(0)"><b>TIT</b>LE</a>
        </div>
        <div class="login-box-body">
            <p class="login-box-msg" style="font-size: 25px; font-weight: bold;">Sign In</p>
            <div role="tabpanel" class="login-tab">
                <ul class="nav nav-tabs" role="tablist">
                    <li role="presentation" class="active"><a id="signin-taba" href="#home" aria-controls="home" role="tab">Sign In</a></li>
                    <li class="hidden" role="presentation"><a id="forgetpass-taba" href="#forget_password" aria-controls="forget_password" role="tab">Forget Password</a></li>
                </ul>
                <div class="tab-content">
                    <div role="tabpanel" class="tab-pane active text-center" id="home">
                        <form action="#" method="post">
                            <div class="form-group has-feedback">
                                <input id="txtUserName" type="text" class="form-control" placeholder="Enter User Name..." />
                                <span class="glyphicon glyphicon-user form-control-feedback"></span>
                            </div>
                            <div class="form-group has-feedback">
                                <input id="txtPassword" type="password" class="form-control" placeholder="Enter Password..." />
                                <span class="glyphicon glyphicon-lock form-control-feedback"></span>
                            </div>
                            <div class="row">
                                <div class="col-xs-8 hidden">
                                    <div class="checkbox icheck">
                                        <label>
                                            <input type="checkbox"> Remember Me
                                        </label>
                                    </div>
                                </div><!-- /.col -->
                                <div class="col-xs-4">
                                    <button id="btnLoginUsers" type="submit" class="btn btn-primary btn-block btn-flat">Sign In</button>
                                </div><!-- /.col -->
                                <div class="col-xs-12 col-sm-12 col-md-12 hidden" style="margin-top:25px;">
                                    <a href="javascript:;" class="forgetpass-tab pull-right"><i class="fa fa-lock fa-fw"></i>Forgot password? </a>
                                </div>
                            </div>
                        </form>

                    </div>
                    <div role="tabpanel" class="tab-pane text-center" id="forget_password">
                        &nbsp;&nbsp;
                        <span id="reset_msg" class="response_msg" style="display: none;">
                            Your reset password has been sent to your email. Please Check.
                        </span>
                        <div class="clearfix"></div>
                        <form>
                            <div class="form-group">
                                <div class="input-group">
                                    <div class="input-group-addon"><i class="fa fa-user"></i></div>
                                    <input type="text" class="form-control" id="funame" placeholder="Enter User Name..">
                                </div>
                                <span class="help-block has-error" data-error='0' id="femail-error"></span>
                            </div>

                            <button type="button" id="reset_btn" class="btn btn-primary btn-block btn-flat" data-loading-text="Please wait....">Reset Password</button>
                            <div class="clearfix"></div>
                        </form>
                        <div class="login-modal-footer">
                            <div class="row">
                                <div class="col-xs-12 col-sm-12 col-md-12" style="margin-top:20px;">
                                    <a href="javascript:;" class="signin-tab pull-right"><i class="fa fa-lock"></i> Sign In </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="social-auth-links text-center hidden">
                    <p>- OR -</p>
                    <a href="#" class="btn btn-block btn-social btn-facebook btn-flat"><i class="fa fa-facebook"></i> Sign in using Facebook</a>
                    <a href="#" class="btn btn-block btn-social btn-google btn-flat"><i class="fa fa-google-plus"></i> Sign in using Google+</a>
                </div><!-- /.social-auth-links -->
                <a id="btnForgetPassword" class="hidden" href="javascript:void(0)">I forgot my password</a><br>
                <a href="register.html" class="text-center hidden">Register a new membership</a>
            </div>
        </div>
        <div id="modalForgetPassword" class="modal fade" role="dialog">
            <div class="modal-dialog modal-sm">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                        <h4 class="modal-title">Forget Password</h4>
                    </div>
                    <div class="modal-body">
                        <div class="form-group">
                            <label for="email">Enter Email address:</label>
                            <input type="email" class="form-control" id="txtEmailAddress" placeholder="Enter Your Email Address.." />
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-default pull-left" data-dismiss="modal">Close</button>
                        <button type="button" class="btn btn-primary pull-right">Submit</button>
                    </div>
                </div>
            </div>
        </div>
        <script type="text/javascript" src="@Url.Content("~/Content/plugins/jQuery/jQuery-2.1.4.min.js")"></script>
        <script type="text/javascript" src="@Url.Content("~/Content/bootstrap/js/bootstrap.min.js")"></script>

        <script type="text/javascript" src="@Url.Content("~/Content/plugins/iCheck/icheck.min.js")"></script>

        <script type="text/javascript">
            var baseURL = "@AppSettings.BaseURL";
            var _LoginUserCode = "@SMESessionVar.UserCode";

            $(function() {
                $('input').iCheck({
                    checkboxClass: 'icheckbox_square-blue',
                    radioClass: 'iradio_square-blue',
                    increaseArea: '20%' // optional
                });
            });

            $(document).ajaxStart(function() {
                $("#loading").fadeIn();
            });
            $(document).ajaxComplete(function() {
                $("#loading").fadeOut();
            });
            $(document).ajaxError(function() {
                $("#loading").fadeOut();
            });
            $(window).load(function() {
                $("#loading").fadeOut();
            });
        </script>
        <script type="text/javascript" src="@Url.Content("~/CustomContents/Scripts/LogIn/LogIn.js")"></script>
    </div>
</body>
</html>
